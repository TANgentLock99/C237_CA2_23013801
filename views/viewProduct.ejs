
<html lang="en">
<head>
  <title>Online Electronic Web application</title>
</head>
<body>
    <%- include ('partials/navbar') -%>
    <div class="container">
    <br>
    <div class="text-center"><h2>Product Details</h2></div>
    <br>
    <% if (product) { %> 
        <div>
            <p><b>Product Name:</b><br> <%= product.productName %></p>

            <p><b>Product Image:</b><br> <img src = "/images/<%= product.image %>" width="20%"></p>

            <p><b>Product Quantity:</b><br> <%= product.quantity %></p>

            <p><b>Price:</b><br> $<%= product.productPrice.toFixed(2) %></p>

            <p><b>Description:</b><br> <%= product.productDescription %></p>
            
        </div>
    <% } else { %>
        <p>No product found.</p>
    <% } %>
    <a href ="/index">Back</a>
</div>
<body></body>