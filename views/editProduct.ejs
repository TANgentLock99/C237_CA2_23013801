<body>
    <%- include ('partials/navbar') -%>
<div class="container">
    <br>
    <div class="text-center"><h2>Update Product</h2></div>
    <br>
    <div class="text-center">
      <% if (product) { %> 
        <form action="/editProduct/<%= product.productID %>" method="POST">
            <label for="name">Product Name:</label><br>
            <input type="text" id="name" name="productName" value = <%= product.productName %> required><br><br>

            <label for="quantity">Quantity:</label><br>
            <input type="number" id="quantity" name="quantity" min="0" step="1" value = <%= product.quantity %> required><br><br>

            <label for="price">Price:</label><br>
            <input type="number" id="price" name="price" min="0" step="0.01" value = <%= product.productPrice %> required><br><br>

            <label for="Description">Product Description And Details:</label><br>
            <input type="text" id="description" name="Description" value = <%= product.productDescription %> required><br><br>

            <label for="image">Current Image:</label><br>
            <input type = "text" name = "currentImage" value = <%= product.image %>  readonly><br>
            <img src = "/images/<%= product.image %>" width="20%"><br><br>

            New Image:<br> <input type = "file" id = "image" name="image" accept = "image/*" value = <%= product.image %>> <br><br>

            <button type="submit">Update Product</button>
        </form>
      <% } else { %>
          <p>No product found.</p>
      <% } %>
      <a href ="/index">Back</a>
    </div>
</div>
</body>
</html>

