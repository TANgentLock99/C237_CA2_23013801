

<body>
    <%- include ('partials/navbar') -%>
<div class="container">
    <br>
    <div class="text-center"><h2>Add New Product</h2></div>
    <br>
    <div class="text-center">
        <form action="/product" method="POST">
            <label for="name">Product Name:</label><br>
            <input type="text" id="name" name="productName" required><br><br>

            <label for="quantity">Stocks of Item Available:</label><br>
            <input type="number" id="quantity" name="quantity" min="0" step="1"required><br><br>

            <label for="price">Price of Item:</label><br>
            <input type="number" id="price" name="productPrice" min="0" step="0.01" required><br><br>

            <label for="image">Sample Imagery:</label><br>
            <input type="file" id="image" name="image" accept = "image/*" required><br><br>

            <label for="description">Product description:</label><br>
            <input type="text" id="name" name="productDescription" required><br><br>

            <button type="submit">Add Product</button>
        </form>
    </div>
</div>
</body>